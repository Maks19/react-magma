{
  "name": "react-magma",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://react-magma.cengage.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/cengage/react-magma.git"
  },
  "scripts": {
    "getAlias": "node ./packages/react-magma-dom/scripts/getAlias.js",
    "getVersion": "node ./packages/react-magma-dom/scripts/getVersion.js",
    "postinstall": "npm run bootstrap && npm run build:lite",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-dom": "lerna run test --scope react-magma-dom -- --watch --coverage=false",
    "storybook": "start-storybook -p 6006",
    "build:docs": "lerna run build --scope react-magma-docs --stream --no-progress",
    "build:lite": "lerna run build --ignore react-magma-docs --ignore react-magma-dom-codesandbox-template --stream --no-progress",
    "build": "lerna run build --ignore react-magma-dom-codesandbox-template --stream --no-progress",
    "build:landing": "node website/react-magma-landing/scripts/build.js",
    "build:storybook": "build-storybook",
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint",
    "develop": "npm run docs",
    "docs": "lerna run --stream --scope react-magma-docs develop",
    "clean": "lerna exec --scope react-magma-docs 'gatsby clean' && lerna clean --yes && rimraf node_modules",
    "cm": "git-cz",
    "cm-retry": "git-cz --retry",
    "check:spelling": "cspell --config=.cspell.json packages/**/*.{md,ts,js,mdx,tsx,jsx}",
    "copy:readme": "copy README.md packages/react-magma-dom",
    "publish": "npm run copy:readme && lerna publish",
    "prettier": "prettier --write --loglevel warn --ignore-path .eslintignore \"**/src/**/*.{js,jsx,ts,tsx,md,mdx,json,html,css,yml,yaml,graphql}\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@storybook/addon-a11y": "^6.1.11",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-controls": "^6.1.11",
    "@storybook/addon-docs": "^6.1.15",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addon-toolbars": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@testing-library/dom": "^4.1.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^12.1.5",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.2.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-polished": "^1.1.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "copy": "^0.3.2",
    "core-js": "^3.1.4",
    "cspell": "^4.1.0",
    "cspell-dict-es-es": "^1.0.19",
    "cspell-dict-lorem-ipsum": "^1.0.13",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-cengage": "^2.1.3",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-unicorn": "^22.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-axe": "3.1.0",
    "jest-cli": "^26.6.3",
    "jest-dom": "^4.0.0",
    "jest-emotion": "^10.0.32",
    "jest-extended": "^0.11.5",
    "jest-watch-typeahead": "^0.6.1",
    "lerna": "3.22.1",
    "lint-staged": "^10.4.0",
    "prettier": "^1.14.2",
    "regenerator-runtime": "^0.13.7",
    "storybook-addon-performance": "^0.13.0",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
